.container {
  display: flex;
  flex-direction: column;
  min-height: 1070rpx;
  background-color: #eee;
  padding: 10px;
}

.input-container {
  width: 710rpx;
  height:120px;
  border-bottom: 1px solid #c7c7c7;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  
  justify-content:space-between;
  align-content: center;

  padding: 0 10px;
  box-sizing: border-box;
  position: sticky;
  top: 5px;
  background-color: #fff;
  z-index: 100;
  border-radius: 10px;
/*定义为自适应布局
display: -webkit-box;
word-break: break-all;
超出文字用省略号代替*/
/*text-overflow: ellipsis;
/*竖直方向的超出隐藏
-webkit-box-orient: vertical;
/*设定行数为2
-webkit-line-clamp:2;
/*多出的部分隐藏
overflow: hidden;*/
}


.text {
  width: 100%;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  font-size: 16px;
  padding: 10px;
  box-sizing: border-box;
}

.confirm {
  height: 60px;
  width: 327px;
  font-size: 16px;

  flex-shrink: 0;
}
/* .input-container image {
  width: 28px;
  height: 28px;
  margin-left: 10px;
} */
.input-container image:nth-of-type(1) {
  width: 28px;
  height: 28px;
  margin-right: 0px;

}
.input-container image:nth-of-type(2) {
  width: 28px;
  height: 28px;
  margin-left: 10px;
}
.content {
  margin-top: 10px;
}
.selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;
  height: 32px;
}
.picker text{
  padding: 5px 10px;
  background-color: #fff;
  border-radius: 10px;
  margin-left: 10px;
  flex: 0;
}
.lists {
  margin-top: 10px;
  border-radius: 10px;
  overflow: hidden;
}
.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 10px;
}
.item image {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}
.nodata {
  padding: 30rpx;
  color: #999;
  font-size: 11pt;
  text-align: center;
  font-style: italic;
}
